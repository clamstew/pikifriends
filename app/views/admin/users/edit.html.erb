<h1>Editing user</h1>

<% form_for(@user, :url => {:action => "update"}, :html => {:multipart => true} ) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<b><%= f.label :username %></b><br/>
		<%= f.text_field :username %>
	</p>
	
	<p>
		<b><%= f.label :password %></b><br/>
		<%= f.text_field :password %>
	</p>
	
	<p>
		<b><%= f.label :firstname %></b><br/>
		<%= f.text_field :firstname %>
	</p>
	
	<p>
		<b><%= f.label :lastname %></b><br/>
		<%= f.text_field :lastname %>
	</p>
	
	<p>
		<b><%= f.label :about %></b><br/>
		<%= f.text_area :about %>
	</p>
	
	<p>
		<b><%= f.label "My Keywords" %></b><br/>
		<%= f.text_field :mykeyword_list  %>
	</p>
	
	<p>
		<b><%= f.label :school_id %></b><br/>
		<%= f.collection_select 'school_id', School.find(:all), :id, :name %>
	</p>
	
	<p>
		<b><%= f.label :role_id %></b><br/>
		<%= f.collection_select 'role_id', Role.find(:all), :id, :name %>
	</p>
	
	<p>
		<b>Image</b><br />
		<%= file_column_field 'user', 'image' %>
	</p>
	
	<p>
		<%= f.submit "Update" %>
	</p>
<% end %>

<%= link_to 'Show', admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
