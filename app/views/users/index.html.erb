<h1>Listing users</h1>
<%= link_to 'New user', new_user_path %><br />
<table>
  <tr>
	<td>ID</td>
	<td>THUMBNAIL</td>
	<td>Name</td>
  </tr>
<% for user in @users %>
  <tr>
	<td><%= user.id %></td>
	<td>
	<% unless user.image.blank? %>
	<%= image_tag url_for_file_column(user,'image','thumb') %>
	<% end %>
	</td>
	<td><%=h user.firstname unless user.firstname.blank? %>, <%=h user.lastname unless user.lastname.blank? %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

